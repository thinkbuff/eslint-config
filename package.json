{
  "name": "@thinkbuff/eslint-config",
  "type": "module",
  "version": "0.2.0",
  "description": "Thinkbuff's ESLint config preset",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "packageManager": "pnpm@9.3.0",
  "engines": {
    "node": ">=18.18.0 || >=20.0.0"
  },
  "scripts": {
    "build": "tsup --clean --dts",
    "dev": "tsup --clean --watch & npx @eslint/config-inspector",
    "watch": "tsup --clean --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "prepack": "pnpm run build",
    "release": "changelogen --release --no-commit --no-tag"
  },
  "keywords": [
    "eslint-config"
  ],
  "homepage": "https://github.com/thinkbuff/eslint-config/#readme",
  "author": "Eleven <eteplus@outlook.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": "^1.5.15",
    "@unocss/eslint-plugin": ">=0.60.4",
    "astro-eslint-parser": "^1.0.2",
    "eslint": ">=9",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "astro-eslint-parser": {
      "optional": true
    },
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "@eslint-react/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-refresh": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.5.15",
    "@eslint/config-inspector": "^0.4.10",
    "@types/node": "^20.14.2",
    "@unocss/eslint-plugin": "^0.60.4",
    "astro-eslint-parser": "^1.0.2",
    "changelogen": "^0.5.5",
    "eslint": "^9.4.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jiti": "^1.21.6",
    "lint-staged": "^15.2.5",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@eslint-types/import": "^2.29.1",
    "@eslint-types/typescript-eslint": "^7.5.0",
    "@eslint-types/unicorn": "^52.0.0",
    "@stylistic/eslint-plugin": "^2.1.0",
    "eslint-plugin-import-x": "^0.5.1",
    "eslint-plugin-perfectionist": "^2.10.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "globals": "^15.4.0",
    "local-pkg": "^0.5.0",
    "type-fest": "^4.20.0",
    "typescript-eslint": "^7.13.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
