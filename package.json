{
  "name": "@thinkbuff/eslint-config",
  "type": "module",
  "version": "0.1.5",
  "description": "Thinkbuff's ESLint config preset",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.18.0 || >=20.0.0"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup --clean --dts",
    "dev": "tsup --clean --watch & eslint-flat-config-viewer",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "prepack": "pnpm run build",
    "release": "changelogen --release --no-commit --no-tag"
  },
  "keywords": [
    "eslint-config"
  ],
  "homepage": "https://github.com/thinkbuff/eslint-config/#readme",
  "author": "Eleven <eteplus@outlook.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": ">=0.58.5",
    "astro-eslint-parser": "^0.16.3",
    "eslint": ">=8.57.0",
    "eslint-plugin-astro": "^0.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "astro-eslint-parser": {
      "optional": true
    },
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-refresh": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.12.6",
    "@unocss/eslint-plugin": "^0.59.0",
    "astro-eslint-parser": "^0.17.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.57.0",
    "eslint-flat-config-viewer": "^0.1.20",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jiti": "^1.21.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "@eslint-types/import": "^2.29.1",
    "@eslint-types/typescript-eslint": "^7.5.0",
    "@eslint-types/unicorn": "^52.0.0",
    "@stylistic/eslint-plugin": "^1.6.3",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint-plugin-i": "^2.29.1",
    "eslint-plugin-perfectionist": "^2.8.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "globals": "^15.0.0",
    "local-pkg": "^0.5.0",
    "type-fest": "^4.15.0",
    "typescript-eslint": "^7.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}